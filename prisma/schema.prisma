generator client {
    provider = "prisma-client-js"
}

datasourse db {
    provider = "postgresql"
    url = env("DB_URL")
}

emun Rol {
    deportista
    entrenador
}

enum StatusUser {
    activo
    pendiente
    bloqueado
    eliminado
}

model Usuario {
    id Int @id @default(autoincrement())
    email    String @unique
    password_hash String
    rol Rol
    nombre String
    foto_perfil_irl String?
    status StatusUser @default(pendiente)
    createAt DataTime @default(now())
    updateAt DataTime @default(now())
}
